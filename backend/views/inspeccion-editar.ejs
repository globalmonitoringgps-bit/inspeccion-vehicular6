    <script>
        // Toggle para placa manual
        document.getElementById('placa').addEventListener('change', function() {
            const otraPlacaContainer = document.getElementById('otraPlacaContainer');
            if (this.value === 'OTRO') {
                otraPlacaContainer.style.display = 'block';
                document.getElementById('otra_placa').required = true;
            } else {
                otraPlacaContainer.style.display = 'none';
                document.getElementById('otra_placa').required = false;
            }
        });
        
        // Convertir placa a may√∫sculas
        document.getElementById('otra_placa')?.addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
        
        // Validaci√≥n antes de enviar
        document.getElementById('inspeccionForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
            const fecha = document.getElementById('fecha_inspeccion').value;
            const conductor = document.getElementById('nombre_conductor').value;
            const inspector = document.getElementById('nombre_elabora').value;
            
            if (!fecha || !conductor || !inspector) {
                alert('Por favor complete los campos obligatorios (*)');
                e.preventDefault();
                return false;
            }
            
            // Mostrar loading
            submitBtn.classList.add('loading');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner"></i> ACTUALIZANDO...';
            
            return true;
        });
        
        // Limpiar formulario con confirmaci√≥n
        document.getElementById('resetBtn').addEventListener('click', function(e) {
            e.preventDefault();
            if (confirm('¬øEst√° seguro de que desea restaurar los valores originales? Se perder√°n todos los cambios no guardados.')) {
                // Recargar la p√°gina para restaurar valores originales
                window.location.reload();
            }
        });
        
        // Mejorar experiencia t√°ctil
        document.querySelectorAll('.radio-option-responsive label').forEach(label => {
            label.addEventListener('touchstart', function() {
                this.style.transform = 'scale(0.95)';
            });
            
            label.addEventListener('touchend', function() {
                this.style.transform = 'scale(1)';
            });
        });
        
        // Auto-focus en primer campo
        window.addEventListener('load', function() {
            document.getElementById('fecha_inspeccion').focus();
        });
        
        // Validar que la fecha de inspecci√≥n no sea futura
        const fechaInspeccion = document.getElementById('fecha_inspeccion');
        if (fechaInspeccion) {
            fechaInspeccion.max = new Date().toISOString().split('T')[0];
            
            fechaInspeccion.addEventListener('change', function() {
                const selectedDate = new Date(this.value);
                const today = new Date();
                today.setHours(0,0,0,0);
                
                if (selectedDate > today) {
                    alert('La fecha de inspecci√≥n no puede ser futura');
                    this.value = new Date().toISOString().split('T')[0];
                }
            });
        }
        
        // Contador de items seleccionados
        function updateSelectionCount() {
            const radios = document.querySelectorAll('input[type="radio"]:checked');
            const defectos = document.querySelectorAll('input[name^="defecto_"]:checked');
            
            // Crear o actualizar contador
            let countDisplay = document.getElementById('selectionCount');
            if (!countDisplay) {
                const header = document.querySelector('.header');
                countDisplay = document.createElement('div');
                countDisplay.id = 'selectionCount';
                countDisplay.style.cssText = `
                    margin-top: 10px;
                    padding: 8px 12px;
                    background: rgba(255,255,255,0.2);
                    border-radius: 4px;
                    font-size: 14px;
                    font-weight: bold;
                `;
                header.appendChild(countDisplay);
            }
            
            countDisplay.textContent = `Items seleccionados: ${radios.length} | Defectos: ${defectos.length}`;
        }
        
        // Actualizar contador cuando cambien los radios o checkboxes
        document.addEventListener('change', function(e) {
            if (e.target.matches('input[type="radio"], input[name^="defecto_"]')) {
                updateSelectionCount();
            }
        });
        
        // Inicializar contador
        setTimeout(updateSelectionCount, 100);
    </script>
