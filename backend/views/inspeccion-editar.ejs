<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-clipboard-check"></i> <%= title %></h1>
            <p>FORMATO SST: INSPECCI√ìN DE VEH√çCULOS</p>
            <div class="header-info">
                <span><i class="fas fa-code"></i> <%= formatoCodigo %></span>
                <span><i class="fas fa-calendar"></i> <%= new Date().toLocaleDateString('es-ES') %></span>
                <span><i class="fas fa-user-tie"></i> Gesti√≥n Operativa</span>
            </div>
            <div style="margin-top: 10px;">
                <a href="/inspecciones" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
            </div>
        </div>
        
        <form action="/inspeccion/editar/<%= inspeccion.id %>" method="POST" class="form-container" id="inspeccionForm">
            <!-- =========================================== -->
            <!-- SECCI√ìN 1: INFORMACI√ìN B√ÅSICA (RESPONSIVE) -->
            <!-- =========================================== -->
            <div class="form-section">
                <h2><i class="fas fa-info-circle"></i> INFORMACI√ìN DEL VEH√çCULO Y CONDUCTOR</h2>
                
                <div class="info-grid">
                    <div class="form-group">
                        <label for="fecha_inspeccion" class="required">Fecha de Inspecci√≥n:</label>
                        <input type="date" id="fecha_inspeccion" name="fecha_inspeccion" 
                               value="<%= inspeccion.fecha_inspeccion ? new Date(inspeccion.fecha_inspeccion).toISOString().split('T')[0] : today %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="tipo_vehiculo">Tipo de veh√≠culo:</label>
                        <select name="tipo_vehiculo" id="tipo_vehiculo">
                            <option value="">Seleccionar</option>
                            <option value="Autom√≥vil" <%= inspeccion.tipo_vehiculo === 'Autom√≥vil' ? 'selected' : '' %>>Autom√≥vil</option>
                            <option value="Camioneta" <%= inspeccion.tipo_vehiculo === 'Camioneta' ? 'selected' : '' %>>Camioneta</option>
                            <option value="Cami√≥n" <%= inspeccion.tipo_vehiculo === 'Cami√≥n' ? 'selected' : '' %>>Cami√≥n</option>
                            <option value="Bus" <%= inspeccion.tipo_vehiculo === 'Bus' ? 'selected' : '' %>>Bus</option>
                            <option value="Motocicleta" <%= inspeccion.tipo_vehiculo === 'Motocicleta' ? 'selected' : '' %>>Motocicleta</option>
                            <option value="Volqueta" <%= inspeccion.tipo_vehiculo === 'Volqueta' ? 'selected' : '' %>>Volqueta</option>
                            <option value="Gr√∫a" <%= inspeccion.tipo_vehiculo === 'Gr√∫a' ? 'selected' : '' %>>Gr√∫a</option>
                            <option value="Otro" <%= inspeccion.tipo_vehiculo === 'Otro' ? 'selected' : '' %>>Otro</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="numero_tarjeta">Propietario:</label>
                        <input type="text" id="numero_tarjeta" name="numero_tarjeta" 
                               value="<%= inspeccion.numero_tarjeta || '' %>" placeholder="Propietario">
                    </div>
                    
                    <div class="form-group">
                        <label for="placa" class="required">Placa del veh√≠culo:</label>
                        <select name="placa" id="placa" required>
                            <option value="">-- Seleccionar Placa --</option>
                            <% 
                            const placasPredeterminadas = ['ABC123', 'XYZ789', 'MNO456', 'QRS321', 'JKL987', 
                                                          'TUV654', 'DEF147', 'GHI258', 'OPC369', 'MVC741'];
                            
                            placasPredeterminadas.forEach(placa => {
                                const selected = inspeccion.placa === placa ? 'selected' : '';
                            %>
                            <option value="<%= placa %>" <%= selected %>><%= placa %></option>
                            <% }); %>
                            <option value="OTRO" <%= !placasPredeterminadas.includes(inspeccion.placa) && inspeccion.placa ? 'selected' : '' %>>OTRA PLACA...</option>
                        </select>
                    </div>
                    
                    <div class="form-group" id="otraPlacaContainer" 
                         style="display: <%= !placasPredeterminadas.includes(inspeccion.placa) && inspeccion.placa ? 'block' : 'none' %>;">
                        <label for="otra_placa" class="required">Ingresar placa:</label>
                        <input type="text" id="otra_placa" name="otra_placa" 
                               value="<%= !placasPredeterminadas.includes(inspeccion.placa) && inspeccion.placa ? inspeccion.placa : '' %>" 
                               placeholder="Ej: DEF456" style="text-transform: uppercase;">
                    </div>
                    
                    <div class="form-group">
                        <label for="nombre_conductor" class="required">Nombre y apellidos del conductor:</label>
                        <input type="text" id="nombre_conductor" name="nombre_conductor" 
                               value="<%= inspeccion.nombre_conductor || '' %>" placeholder="Nombre completo" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="modelo">Modelo del veh√≠culo:</label>
                        <input type="text" id="modelo" name="modelo" 
                               value="<%= inspeccion.modelo || '' %>" placeholder="Ej: 2020">
                    </div>
                    
                    <div class="form-group">
                        <label for="fecha_revision">Fecha revisi√≥n t√©cnico-mec√°nica:</label>
                        <input type="date" id="fecha_revision" name="fecha_revision" 
                               value="<%= inspeccion.fecha_revision ? new Date(inspeccion.fecha_revision).toISOString().split('T')[0] : '' %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="licencia_conductor">N√∫mero de la Licencia de conducci√≥n:</label>
                        <input type="text" id="licencia_conductor" name="licencia_conductor" 
                               value="<%= inspeccion.licencia_conductor || '' %>" placeholder="N√∫mero de licencia">
                    </div>
                    
                    <div class="form-group">
                        <label for="fecha_vencimiento_soat">Fecha de vencimiento del SOAT:</label>
                        <input type="date" id="fecha_vencimiento_soat" name="fecha_vencimiento_soat" 
                               value="<%= inspeccion.fecha_vencimiento_soat ? new Date(inspeccion.fecha_vencimiento_soat).toISOString().split('T')[0] : '' %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="fecha_cambio_aceite">Fecha √∫ltimo cambio de aceite:</label>
                        <input type="date" id="fecha_cambio_aceite" name="fecha_cambio_aceite" 
                               value="<%= inspeccion.fecha_cambio_aceite ? new Date(inspeccion.fecha_cambio_aceite).toISOString().split('T')[0] : '' %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="fecha_mantenimiento">Fecha mantenimiento preventivo (taller):</label>
                        <input type="text" id="fecha_mantenimiento" name="fecha_mantenimiento" 
                               value="<%= inspeccion.fecha_mantenimiento || '' %>" placeholder="Fecha y nombre del taller">
                    </div>
                    
                    <div class="form-group">
                        <label for="kilometraje">Kilometraje actual:</label>
                        <input type="number" id="kilometraje" name="kilometraje" 
                               value="<%= inspeccion.kilometraje || '' %>" placeholder="Km" min="0">
                    </div>
                </div>
            </div>
            
            <!-- =========================================== -->
            <!-- SECCI√ìN 2: PARTES DEFECTUOSAS (RESPONSIVE) -->
            <!-- =========================================== -->
            <div class="defectos-section">
                <h3><i class="fas fa-exclamation-triangle"></i> PARTES DEFECTUOSAS DEL VEH√çCULO</h3>
                <p>Seleccione las partes que presentan condiciones defectuosas:</p>
                
                <div class="vehiculo-diagrama">
                    <div class="diagrama-icono">üöó</div>
                    <p class="hidden-desktop">Toque las partes defectuosas</p>
                    
                    <div class="checkbox-grid">
                        <div class="checkbox-item">
                            <label>
                                <input type="checkbox" name="defecto_frontal" <%= defectos.frontal %>>
                                <i class="fas fa-car-front"></i> Delantero
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <label>
                                <input type="checkbox" name="defecto_trasero" <%= defectos.trasero %>>
                                <i class="fas fa-car-rear"></i> Trasero
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <label>
                                <input type="checkbox" name="defecto_lateral_izq" <%= defectos.lateral_izq %>>
                                <i class="fas fa-car-side"></i> Lateral Izq
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <label>
                                <input type="checkbox" name="defecto_lateral_der" <%= defectos.lateral_der %>>
                                <i class="fas fa-car-side fa-flip-horizontal"></i> Lateral Der
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <label>
                                <input type="checkbox" name="defecto_techo" <%= defectos.techo %>>
                                <i class="fas fa-car-burst"></i> Techo
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <label>
                                <input type="checkbox" name="defecto_interior" <%= defectos.interior %>>
                                <i class="fas fa-chair"></i> Interior
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <label>
                                <input type="checkbox" name="defecto_motor" <%= defectos.motor %>>
                                <i class="fas fa-engine"></i> Motor
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <label>
                                <input type="checkbox" name="defecto_chasis" <%= defectos.chasis %>>
                                <i class="fas fa-gears"></i> Chasis
                            </label>
                        </div>
                    </div>
                    
                    <div class="defecto-descripcion">
                        <label for="descripcion_defecto">Descripci√≥n del defecto:</label>
                        <textarea id="descripcion_defecto" name="descripcion_defecto" rows="3" 
                                  placeholder="Describa detalladamente el defecto encontrado..."><%= inspeccion.descripcion_defecto || '' %></textarea>
                    </div>
                </div>
            </div>
            
            <!-- =========================================== -->
            <!-- SECCI√ìN 3: LISTA DE CHEQUEO COMPLETA (RESPONSIVE) -->
            <!-- =========================================== -->
